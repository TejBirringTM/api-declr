{
  "compilerOptions": {
    "declaration": true,
    "outDir": "out",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "target": "ES2017",
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "noEmitOnError": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
